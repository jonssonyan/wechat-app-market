<!--首页-->
<view>
    <swiper indicator-dots="{{indicatorDots}}"
            autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{images}}" wx:key="*this">
            <swiper-item>
                <view>
                    <image style="width: 100%;" mode="aspectFill" src="{{item}}"></image>
                </view>
            </swiper-item>
        </block>
    </swiper>

    <i-row wx:for="{{categorys}}" wx:key="*this">
        <i-col span="8" wx:for="{{item}}" wx:key="*this" i-class="col-class" data-order="{{item}}"
               bindtap="categoryClick">
            <i-icon type="{{item.type}}" size="24"/>
            <view>{{item.name}}</view>
        </i-col>
    </i-row>

    <i-row>
        <i-col wx:for="{{products}}" wx:key="*this" data-order="{{item}}" span="12" i-class="col-class"
               bindtap="productClick">
            <image class="grid-item-image" src=""/>
            <view>{{item.name}}</view>
        </i-col>
    </i-row>
</view>
