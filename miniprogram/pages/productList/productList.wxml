<!--商品列表，显示所有的商品-->
<view>
    <i-row>
        <i-col span="16" i-class="col-class">
            <i-input value="{{ productParam.filter.name }}" autofocus placeholder="请输入商品名称"/>
        </i-col>
        <i-col span="8" i-class="col-class">
            <button class="button" bind:click="searchProduct" type="default" size="mini" shape="circle">查询</button>
        </i-col>
    </i-row>
    <i-row>
        <i-col wx:for="{{products}}" wx:key="*this" data-product="{{item}}" span="12" i-class="col-class"
               bindtap="productClick">
            <image class="grid-item-image" src="{{item.tempFileURL}}"/>
            <view>{{item.name}}</view>
        </i-col>
    </i-row>
</view>
