<view>
    <block wx:if="{{!hasUserInfo}}">
        <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile">微信登录</button>
        <button wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信登录</button>
    </block>
    <block wx:else>
        <i-card title="{{userInfo.nickName}}" thumb="{{userInfo.avatarUrl}}"
                full="true">
            <view slot="content">
                <i-panel title="我的交易">
                    <view style="padding: 15px;">
                        <i-cell-group>
                            <i-cell title="我发布的" is-link url="/pages/product/product"></i-cell>
                            <i-cell title="我卖出的" is-link url="/pages/sell/sell"></i-cell>
                            <i-cell title="我买到的" is-link url="/pages/buy/buy"></i-cell>
                        </i-cell-group>
                    </view>
                </i-panel>
                <i-panel title="更多">
                    <view style="padding: 15px;">
                        <i-cell-group>
                            <i-cell title="我的收藏" is-link="/pages/collection/collection"></i-cell>
                        </i-cell-group>
                    </view>
                </i-panel>
            </view>
        </i-card>
    </block>
</view>
