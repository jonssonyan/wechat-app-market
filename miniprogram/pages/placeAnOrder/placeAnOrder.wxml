<!--下单-->
<i-input value="{{ product.name }}" title="商品名称" disabled/>
<i-panel title="下单数量">
    <view style="padding: 16px">
        <i-input-number value="{{ orderParam.order.num }}" min="1" title="下单数量" max="{{111}}"
                        bind:change="handleChangeNum"/>
    </view>
</i-panel>

<i-input value="{{ orderParam.order.address }}" title="收获地址" placeholder="请输入收获地址"/>

<i-panel title="付款方式">
    <view style="padding: 16px">
        <picker mode="selector" bindchange="bindPickerChange" range-key="name" range="{{methods}}">
            <view class="picker">
                当前选择：{{method.name}}
            </view>
        </picker>
    </view>
</i-panel>

<i-input value="{{ orderParam.order.totalPrice }}" title="总价" disabled/>

<i-button bind:click="placeAnOrder"
          type="success" size="small" shape="circle">立即下单
</i-button>